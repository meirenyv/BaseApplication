<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- App Bar 的背景色，即 ActionBar，通常也是一个 App 的主题色调。不过 ActionBar 已经退出历史舞台，由 Toolbar 代替使用，但是 Toolbar 需要在 layout 文件中单独使用 background 属性设置背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--status bar（状态栏）背景色。仅作用于 Lollipop 及更高版本。-->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--许多控件在选中状态或获取焦点状态下使用这个颜色，常见有：1、heckBox：checked 状态2、RadioButton：checked 状态3、SwitchCompat：checked 状态4、EditText：获取焦点时的 underline 和 cursor 颜色5、TextInputLayout：悬浮 label 字体颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--通用按钮样式-->
    <style name="StyleButtonCommon">
        <item name="android:layout_width">450px</item>
        <item name="android:layout_height">86px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">41px</item>
    </style>
    <!--分割线默认属性-->
    <style name="LineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/ColorLine</item>
    </style>

    <!--EditText通用属性-->
    <style name="EditextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/colorTextHint01</item>
        <item name="android:textSize">34px</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">@color/colorText03</item>
    </style>
    
    
    
    <style name="ImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ImageViewStyleTab" parent="ImageViewStyle">
        <item name="android:layout_height">50px</item>
        <item name="android:layout_width">50px</item>
    </style>



</resources>
