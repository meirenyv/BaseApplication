<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="117px"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="121px"
            android:layout_height="117px"
            android:orientation="vertical">
            <ImageView
                android:layout_height="86px"
                android:layout_width="86px"
                android:layout_gravity="center"
                android:src="@mipmap/icon_identity"
                style="@style/ImageViewStyle"
                />
            <TextView
                android:id="@+id/mTextPersonOrEnterprise"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="个人用户"
                android:background="@drawable/shap_text_identity"
                android:textSize="17px"
                android:layout_width="match_parent"
                android:layout_height="17px" />
        </LinearLayout>


            <TextView
                android:id="@+id/mTextPhoneNumber"
                android:layout_marginLeft="32px"
                android:layout_weight="1"
                android:gravity="left"
                style="@style/TextViewStytle"
                android:textColor="@color/mygray"
                android:text="15680863723"
                android:layout_width="wrap_content"
                android:layout_height="29px" />


        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="150px"
            android:layout_height="181px"
            android:orientation="horizontal"
            >
            <ImageView
                android:src="@mipmap/icon_certification"
                style="@style/ImageViewStyle"
                android:layout_gravity="center"
                android:layout_width="34px"
                android:layout_height="44px" />
            <TextView
                android:id="@+id/mTextCertification"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="已认证"
                android:textSize="17px"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="17px" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mLinMyads"
        android:layout_marginTop="21px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="181px"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/myads"
            style="@style/ImageViewStyleLeft"/>
        <LinearLayout
            android:layout_marginLeft="32px"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:gravity="left"
                style="@style/TextViewStytle"
                android:textColor="@color/black"
                tools:text="@string/myads"
                android:layout_height="29px" />
            <TextView
                android:layout_marginTop="10px"
                android:gravity="left|center"
                android:text="当前0个可投放广告，0个可投放广告"
                style="@style/TextViewStytle"
                android:textSize="18px"
                android:layout_height="18px" />
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            style="@style/TextViewStytle"
            android:background="@drawable/selector_makeads"
            android:text="@string/makeAD"
            android:layout_width="150px"
            android:layout_height="61px" />
    </LinearLayout>
    <View style="@style/LineStyle" />
    <LinearLayout
        android:id="@+id/mLinMyscreen"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="181px"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/icon_myscreen"
            style="@style/ImageViewStyleLeft"/>
        <LinearLayout
            android:layout_marginLeft="32px"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:gravity="left"
                style="@style/TextViewStytle"
                android:textColor="@color/black"
                android:text="@string/myscreen"
                android:layout_height="29px" />
            <TextView
                android:layout_marginTop="10px"
                android:gravity="left"
                android:text="用有0个屏幕，0个屏幕组"
                style="@style/TextViewStytle"
                android:textSize="18px"
                android:layout_height="18px" />
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            style="@style/TextViewStytle"
            android:background="@drawable/selector_addscreen"
            android:text="@string/addscreen"
            android:layout_width="150px"
            android:layout_height="61px" />
    </LinearLayout>
    <View style="@style/LineStyle" />


    <LinearLayout
        android:id="@+id/mLinMyShoppingCart"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="181px"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/icon_mywallet"
            style="@style/ImageViewStyleLeft"/>
        <LinearLayout
            android:layout_marginLeft="32px"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:gravity="left|center"
                style="@style/TextViewStytle"
                android:textColor="@color/black"
                android:text="@string/myShoppingCart"
                android:layout_height="29px" />
            <TextView
                android:layout_marginTop="10px"
                android:gravity="left"
                android:text="当前订单0个"
                style="@style/TextViewStytle"
                android:textSize="18px"
                android:layout_height="18px" />
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            style="@style/TextViewStytle"
            android:background="@drawable/cleaning"
            android:text="@string/cleaning"
            android:layout_width="150px"
            android:layout_height="61px" />
    </LinearLayout>
    <View style="@style/LineStyle" />



    <LinearLayout
        android:id="@+id/mLinMywallet"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="181px"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/icon_mywallet"
            style="@style/ImageViewStyleLeft"/>
        <LinearLayout
            android:layout_marginLeft="32px"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:gravity="left"
                style="@style/TextViewStytle"
                android:textColor="@color/black"
                android:text="@string/mywallet"
                android:layout_height="29px" />
            <TextView
                android:layout_marginTop="10px"
                android:gravity="left"
                android:text="当前余额0.00"
                style="@style/TextViewStytle"
                android:textSize="18px"
                android:layout_height="18px" />
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            style="@style/TextViewStytle"
            android:background="@drawable/recharge"
            android:text="@string/recharge"
            android:layout_width="150px"
            android:layout_height="61px" />
    </LinearLayout>
    <View style="@style/LineStyle" />



</LinearLayout>