<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context="lzhs.com.baseapplication.module.login.NewAppActivity">
    <ImageView
        android:id="@+id/PP"
        android:src="@mipmap/login_logo"
        android:layout_marginTop="105px"
        android:layout_centerHorizontal="true"
        android:layout_width="270px"
        android:layout_height="310px" />
    <Button
        android:id="@+id/mButtonRegist"
        android:layout_marginTop="170px"
        android:layout_below="@id/PP"
        android:layout_centerHorizontal="true"
        style="@style/StyleButtonCommon"
        android:background="@drawable/shap_btn_regist"
        android:gravity="center_vertical"
        android:text="手机注册"
        android:paddingLeft="55px"
        android:paddingRight="45px"
        android:drawablePadding="45px"
        android:drawableLeft="@mipmap/icon_phone"
        />
    <Button
        android:id="@+id/mButtonLogin"
        android:layout_marginTop="70px"
        android:layout_below="@id/mButtonRegist"
        android:layout_centerHorizontal="true"
        style="@style/StyleButtonCommon"
        android:background="@drawable/shap_btn_login"
        android:gravity="center_vertical"
        android:text="账号登陆"
        android:paddingLeft="55px"
        android:drawablePadding="45px"
        android:drawableLeft="@mipmap/icon_phone"
        />

        <ImageView
            android:id="@+id/ImgQQ"
            android:layout_below="@id/mButtonLogin"
            android:layout_alignLeft="@id/mButtonLogin"
            android:layout_marginTop="123px"
            android:layout_width="85px"
            android:layout_height="85px"
            android:src="@mipmap/icon_phone"/>
        <ImageView
            android:id="@+id/ImgWeChat"
          android:layout_alignTop="@id/ImgQQ"
            android:layout_alignRight="@id/mButtonLogin"
            android:layout_width="85px"
            android:layout_height="85px"
            android:src="@mipmap/icon_phone"/>

</RelativeLayout>
